@{
    ViewBag.Title = "Home Page";
}

<div class="container">
  <div class="col-xs-12" style="padding-top:20px;padding-bottom:10px;background-color:#f5f5f5;">
    <form class="form-horizontal">
      <div class="form-group">
        <label class="control-label col-xs-3" for="GitHubHost">GitHub Host:</label>
        <div class="col-xs-9">
          <input type="text" class="form-control" id="GitHubHost" value="github.com">
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-xs-3" for="OrgName">Org Name:</label>
        <div class="col-xs-9">
          <input type="text" class="form-control" id="OrgName" value="">
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-xs-3" for="CloneToPath">Clone To Path:</label>
        <div class="col-xs-9">
          <input type="text" class="form-control" id="CloneToPath" value="C:\Workspace\Git">
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-xs-3" for="AccessToken">Access Token:</label>
        <div class="col-xs-9">
          <input type="text" class="form-control" id="AccessToken" value="">
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-xs-3" for="PageNum">Page Num:</label>
        <div class="col-xs-9">
          <input type="number" class="form-control" id="PageNum" value=1>
        </div>
      </div>
    </form>
    <p><a href="javascript:app.getRepos();" class="btn btn-primary btn-lg">Get Repos</a> <a href="javascript:app.cloneRepos();" class="btn btn-primary btn-lg">Clone Selected</a></p>
  </div>
</div>

<div id="resultsContainer" class="container"></div>
